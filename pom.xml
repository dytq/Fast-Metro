<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project fast-metro">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/home/user/git/Fast-Metro"/>
    <property name="dir.jarfile" value="${dir.buildfile}/target"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/Compte-1.0-SNAPSHOT.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="fastmetro.Main"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.jarfile}/classes"/>
            <zipfileset excludes="META-INF/*.SF" src="/home/user/.m2/repository/com/google/code/gson/gson/2.8.6/gson-2.8.6.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="/home/user/.m2/repository/commons-lang/commons-lang/2.1/commons-lang-2.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="/home/user/.m2/repository/org/codehaus/plexus/plexus-utils/1.1/plexus-utils-1.1.jar"/>
        </jar>
    </target>
</project>
